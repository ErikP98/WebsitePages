{
  "version": 8,
  "sources": {
    
    "ne2_shaded": {
      "maxzoom": 6,
      "tileSize": 256,
      "tiles": [
        "https://tiles.openfreemap.org/natural_earth/ne2sr/{z}/{x}/{y}.png"
      ],
      "type": "raster"
    },
    "openmaptiles": {
      "type": "vector",
      "url": "https://tiles.openfreemap.org/planet"
    }
  },
  "sprite": "https://tiles.openfreemap.org/sprites/ofm_f384/ofm",
  "glyphs": "https://tiles.openfreemap.org/fonts/{fontstack}/{range}.pbf",
  "layers": [

    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#469fb5"
      }
    },

    {
      "id": "waterway_river",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "filter": [
        "all",
        ["==", ["get", "class"], "river"],
        ["!=", ["get", "brunnel"], "tunnel"]
      ],
      "layout": {
        "line-cap": "round"
      },
      "paint": {
        "line-color": "#4cc3de",
        "line-opacity": 1,
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          11, 0.5, 20, 6
        ]
      }
    },
    
    {
      "id": "waterway_other",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "filter": [
        "all",
        ["!=", ["get", "class"], "river"],
        ["!=", ["get", "brunnel"], "tunnel"]
      ],
      "layout": {
        "line-cap": "round"
      },
      "paint": {
        "line-color": "#4cc3de",
        "line-opacity": 1,
        "line-width": [
          "interpolate",
          ["exponential", 1.3],
          ["zoom"],
          13, 0.5, 20, 6
        ]
      }
    },

    {
      "id": "water_shadow_base",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "filter": ["!=", ["get", "brunnel"], "tunnel"],
      "paint": {
        "fill-color": "#082530",
        "fill-opacity": 1.0,
        "fill-translate": [-1.5, -1.5]
      }
    },
    {
      "id": "water_shadow_pattern",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "filter": ["!=", ["get", "brunnel"], "tunnel"],
      "paint": {
        "fill-pattern": "water-pattern",
        "fill-opacity": 0.25,
        "fill-translate": [-1.5, -1.5]
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "filter": ["!=", ["get", "brunnel"], "tunnel"],
      "paint": {
        "fill-pattern": "water-pattern",
        "fill-opacity": 1.0
      }
    },

    {
      "id": "road_motorway_link",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 12,
      "filter": [
        "all",
        ["match", ["get", "brunnel"], ["bridge", "tunnel"], false, true],
        ["==", ["get", "class"], "motorway"],
        ["==", ["get", "ramp"], 1]
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          12.5, 2, 13, 2, 14, 2.5, 20, 11.5
        ]
      }
    },

    {
      "id": "road_service_track",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "all",
        ["match", ["get", "brunnel"], ["bridge", "tunnel"], false, true],
        ["match", ["get", "class"], ["service", "track"], true, false]
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          15.5, 2, 16, 2, 20, 7.5
        ]
      }
    },

    {
      "id": "road_link",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 13,
      "filter": [
        "all",
        ["match", ["get", "brunnel"], ["bridge", "tunnel"], false, true],
        ["==", ["get", "ramp"], 1],
        ["match", ["get", "class"], ["motorway", "path", "pedestrian", "service", "track"], false, true]
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          12.5, 2, 13, 2, 14, 2.5, 20, 11.5
        ]
      }
    },

    {
      "id": "road_minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "all",
        ["match", ["geometry-type"], ["LineString", "MultiLineString"], true, false],
        ["match", ["get", "brunnel"], ["bridge", "tunnel"], false, true],
        ["match", ["get", "class"], ["minor"], true, false]
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          12.5, 2, 15, 2.5, 20, 18
        ]
      }
    },

    {
      "id": "road_secondary_tertiary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 7,
      "filter": [
        "all",
        ["match", ["get", "brunnel"], ["bridge", "tunnel"], false, true],
        ["match", ["get", "class"], ["secondary", "tertiary"], true, false]
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          7, 2, 8, 2, 20, 13
        ]
      }
    },

    {
      "id": "road_trunk_primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 7,
      "filter": [
        "all",
        ["match", ["get", "brunnel"], ["bridge", "tunnel"], false, true],
        ["match", ["get", "class"], ["primary", "trunk"], true, false]
      ],
      "layout": {
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          7, 2, 8, 2, 20, 18
        ]
      }
    },

    {
      "id": "road_motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 7,
      "filter": [
        "all",
        ["match", ["get", "brunnel"], ["bridge", "tunnel"], false, true],
        ["==", ["get", "class"], "motorway"],
        ["!=", ["get", "ramp"], 1]
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          7, 2, 8, 2, 20, 18
        ]
      }
    },
    
    {
      "id": "bridge_motorway_link",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "all",
        ["==", ["get", "class"], "motorway"],
        ["==", ["get", "ramp"], 1],
        ["==", ["get", "brunnel"], "bridge"]
      ],
      "layout": {
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          12.5, 2, 13, 2, 14, 2.5, 20, 11.5
        ]
      }
    },

    {
      "id": "bridge_service_track",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "all",
        ["==", ["get", "brunnel"], "bridge"],
        ["match", ["get", "class"], ["service", "track"], true, false]
      ],
      "layout": {
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          15.5, 2, 16, 2, 20, 7.5
        ]
      }
    },

    {
      "id": "bridge_link",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "all",
        ["==", ["get", "class"], "link"],
        ["==", ["get", "brunnel"], "bridge"]
      ],
      "layout": {
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          12.5, 2, 13, 2, 14, 2.5, 20, 11.5
        ]
      }
    },

    {
      "id": "bridge_street",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "all",
        ["==", ["get", "brunnel"], "bridge"],
        ["match", ["get", "class"], ["minor"], true, false]
      ],
      "layout": {
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          13.5, 2, 14, 2.5, 20, 18
        ]
      }
    },

    {
      "id": "bridge_secondary_tertiary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 7,
      "filter": [
        "all",
        ["==", ["get", "brunnel"], "bridge"],
        ["match", ["get", "class"], ["secondary", "tertiary"], true, false]
      ],
      "layout": {
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          7, 2, 8, 2, 20, 10
        ]
      }
    },

    {
      "id": "bridge_trunk_primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 7,
      "filter": [
        "all",
        ["==", ["get", "brunnel"], "bridge"],
        ["match", ["get", "class"], ["primary", "trunk"], true, false]
      ],
      "layout": {
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          7, 2, 8, 2, 20, 18
        ]
      }
    },

    {
      "id": "bridge_motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 7,
      "filter": [
        "all",
        ["==", ["get", "class"], "motorway"],
        ["!=", ["get", "ramp"], 1],
        ["==", ["get", "brunnel"], "bridge"]
      ],
      "layout": {
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ecd4bc",
        "line-width": [
          "interpolate",
          ["exponential", 1.2],
          ["zoom"],
          7, 2, 8, 2, 20, 18
        ]
      }
    },
        
    {
      "id": "label_country_3",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "minzoom": 2,
      "maxzoom": 9,
      "filter": [
        "all",
        ["==", ["get", "class"], "country"],
        [">=", ["get", "rank"], 3]
      ],
      "layout": {
        "text-field": [
          "case",
          ["has", "name:nonlatin"],
          ["concat", ["get", "name:latin"], "\n", ["get", "name:nonlatin"]],
          ["coalesce", ["get", "name_en"], ["get", "name"]]
        ],
        "text-font": ["Noto Sans Bold"],
        "text-max-width": 6.25,
        "text-size": ["interpolate", ["linear"], ["zoom"], 3, 9, 7, 17]
      },
      "paint": {
        "text-color": "transparent",
        "text-halo-blur": 1,
        "text-halo-color": "transparent",
        "text-halo-width": 1
      }
    },

    {
      "id": "label_country_2",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "maxzoom": 9,
      "filter": [
        "all",
        ["==", ["get", "class"], "country"],
        ["==", ["get", "rank"], 2]
      ],
      "layout": {
        "text-field": [
          "case",
          ["has", "name:nonlatin"],
          ["concat", ["get", "name:latin"], "\n", ["get", "name:nonlatin"]],
          ["coalesce", ["get", "name_en"], ["get", "name"]]
        ],
        "text-font": ["Noto Sans Bold"],
        "text-max-width": 6.25,
        "text-size": ["interpolate", ["linear"], ["zoom"], 2, 9, 5, 17]
      },
      "paint": {
        "text-color": "transparent",
        "text-halo-blur": 1,
        "text-halo-color": "transparent",
        "text-halo-width": 1
      }
    },

    {
      "id": "label_country_1",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "maxzoom": 9,
      "filter": [
        "all",
        ["==", ["get", "class"], "country"],
        ["==", ["get", "rank"], 1]
      ],
      "layout": {
        "text-field": [
          "case",
          ["has", "name:nonlatin"],
          ["concat", ["get", "name:latin"], "\n", ["get", "name:nonlatin"]],
          ["coalesce", ["get", "name_en"], ["get", "name"]]
        ],
        "text-font": ["Noto Sans Bold"],
        "text-max-width": 6.25,
        "text-size": ["interpolate", ["linear"], ["zoom"], 1, 9, 4, 17]
      },
      "paint": {
        "text-color": "transparent",
        "text-halo-blur": 1,
        "text-halo-color": "transparent",
        "text-halo-width": 1
      }
    }
  ]
}
